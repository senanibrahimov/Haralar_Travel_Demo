<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    tools:context=".login_activity"
  >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ebebe9"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/download"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal">

        </ImageView>
        <EditText
            android:padding="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gmail_login"
            android:singleLine="true"
            android:background="@drawable/register_bacground"
            android:hint="Mail"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="7dp"

            >

        </EditText>
        <EditText
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_login"
            android:hint="Şifrə"
            android:background="@drawable/register_bacground"
            android:padding="8dp"

            android:singleLine="true"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_baseline_https_24"
            android:drawablePadding="7dp"


            >

        </EditText>
        <Button
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giriş"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:id="@+id/login_buttonu"
            >

        </Button>
        <TextView
            android:id="@+id/forget_parol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parolu unudubsuz?"
            android:textColor="@color/goy"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackground"
            android:padding="6dp">


        </TextView>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hesabiniz yoxdu?"
                android:textColor="@color/black"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/registerolun"
                android:text="Qeydiyyat"
                android:padding="6dp"
                android:textColor="@color/qirmizi"
                android:background="?attr/selectableItemBackground">

            </TextView>
        </LinearLayout>



    </LinearLayout>



</ScrollView>