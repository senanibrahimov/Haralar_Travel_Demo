<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#ebebe9"
        android:orientation="vertical">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/download"
            android:layout_gravity="center_horizontal">

        </ImageView>

        <EditText
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_register"
            android:hint="Ad"
            android:background="@drawable/register_bacground"
            android:singleLine="true"
            android:drawablePadding="7dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"

            >

        </EditText>
        <EditText
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/surname_register"
            android:hint="Soyad"
            android:background="@drawable/register_bacground"
            android:singleLine="true"
            android:drawablePadding="7dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"

            >

        </EditText>
        <EditText
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_register"
            android:hint="Telefon nomresi"
            android:background="@drawable/register_bacground"
            android:singleLine="true"
            android:drawablePadding="7dp"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"

            >

        </EditText>
        <EditText
            android:padding="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gmail"
            android:singleLine="true"
            android:background="@drawable/register_bacground"

            android:hint="Mail"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="7dp"

            >

        </EditText>
        <EditText
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:hint="Şifrə"
            android:background="@drawable/register_bacground"
            android:padding="8dp"

            android:singleLine="true"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_baseline_https_24"
            android:drawablePadding="7dp"


            >

        </EditText>

        <EditText
            android:background="@drawable/register_bacground"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copyofparol"
            android:hint="Şifrənin Təkrarı"
            android:singleLine="true"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_baseline_https_24"
            android:drawablePadding="7dp"
            android:padding="8dp"



            >

        </EditText>
        <Button
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qeydiyyat"
            android:id="@+id/register_button"
            >

        </Button>
    </LinearLayout>


</ScrollView>